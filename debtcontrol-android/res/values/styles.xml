<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- Styles for status text in main list -->

    <style name="statusTextBase">
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:padding">5dp</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="statusTextStyleInactive" parent="statusTextBase">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="statusTextStyleActive" parent="statusTextBase">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/oval</item>
    </style>

    <style name="LineSpacing">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ButtonInListStyleBase">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">12dip</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="ButtonInListStyleGrey" parent="ButtonInListStyleBase">
        <item name="android:background">@drawable/button_grey</item>
    </style>
    <style name="ButtonInListStyleGreen" parent="ButtonInListStyleBase">
        <item name="android:background">@drawable/button_green</item>
    </style>
    <style name="ButtonInListStyleRed" parent="ButtonInListStyleBase">
        <item name="android:background">@drawable/button_red</item>
    </style>


</resources>